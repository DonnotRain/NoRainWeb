@using System.Web.Optimization
@{
    ViewBag.Title = "系统用户管理";
}
@section CommonHeader{
    <!--开始 公用样式 -->
    <link href="~/assets/global/plugins/icheck/skins/all.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" />
    <!--结束 公用样式 -->
}
@section Header{
    <style type="text/css">
    </style>
}
<h3 class="page-title">系统用户管理 <small>维护系统中的操作用户，设置用户角色</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="javascript:;">权限管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li class="active">用户</li>
    </ul>
</div>
<form class="form-inline form-search">
    <div class="form-group">
        <label class="sr-only" for="conditionName">用户名称:</label>
        <input type="text" class="form-control" id="conditionName" placeholder="用户名或姓名">
    </div>
    <a href="javascript:void(0)" class="btn  btn-sm green" id="btnSearch">查询 <i class="fa fa-search"></i></a>
</form>
<hr class="sm" />
<div class="row">
    <div class="col-md-8 col-sm-12">
        <a href="javascript:;" class="btn blue btn-sm" onclick="SysUsers.Add();">
            <i class="fa fa-plus"></i>
            <span class="hidden-480">添加
            </span>
        </a>
        <a href="javascript:;" class="btn blue btn-sm" onclick="SysUsers.Edit();">
            <i class="fa fa-pencil"></i>
            <span class="hidden-480">修改
            </span>
        </a>
        <a href="javascript:;" class="btn blue btn-sm" onclick="SysUsers.Delete();">
            <i class="fa fa-minus"></i>
            <span class="hidden-480">删除
            </span>
        </a>
    </div>
</div>

<div class="dg-panel" style="padding-top: 5px">
    @*    <div id="dgMain">
        </div>*@
    <table class="table table-striped table-bordered table-hover" id="tableMain">
        <thead>
            <tr role="row" class="heading">
                <th style="width: 1%" >
                    <input type="checkbox" class="group-checkable">
                </th>
                <th class="Name">用户名</th>
                <th class="FullName">姓名</th>
                <th class="Phone">联系电话</th>
                <th class="Address">住址</th>
                <th class="Roles">角色</th>
                <th class="Email">电子邮箱</th>
                <th class="Options">选项</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@Html.Partial("Create")
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/global/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/assets/global/scripts/datatable.js"></script>

    <script src="~/assets/global/plugins/select2/select2.js"></script>
    <script src="~/assets/global/plugins/select2/select2_locale_zh-CN.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/localization/messages_zh.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
    <script src="~/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.zh-CN.js"></script>

    <script src="~/assets/global/plugins/icheck/icheck.min.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="~/assets/admin/NoRain/scripts/SysUser.js"></script>
    <script type="text/javascript">
        SysUsers.init();
    </script>
}