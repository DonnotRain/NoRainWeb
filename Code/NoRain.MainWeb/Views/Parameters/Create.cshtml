<!--BEGIN 添加和编辑的表单 -->
<div id="mainDlg" class="modal fade" role="dialog" aria-hidden="true" tabindex="-1" data-backdrop="static" data-width="400" data-draggable="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="responsive-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">插件</h4>
            </div>
            <div class="modal-body">
                @* form-row-seperated*@
                <form class="form-horizontal" role="form" method="post" id="fm">
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        输入信息有误，请检查后重试。
                    </div>
                    <div class="alert alert-success display-hide">
                        <button class="close" data-close="alert"></button>
                        输入验证成功!
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label required">参数名称</label>
                        <div class="col-md-4">
                            <input name="Name" class="form-control required" type="text" id="Name" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label required">参数值</label>
                        <div class="col-md-4">
                            <input name="ValueContent" class="form-control required" type="text" id="ValueContent" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label required">参数描述</label>
                        <div class="col-md-8">
                            <textarea name="Description" class="form-control required" rows="6" id="Description"></textarea>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label class="col-md-2 control-label required">选项</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="icheck-inline">
                                    <label>
                                        <input type="checkbox" id="IsEnabledCheck" name="IsEnabled" checked="checked" class="icheck" />启用
                                    </label>
                                    <label>
                                        <input type="checkbox" id="AllowDeleteCheck" name="IsCanDelete" checked="checked" class="icheck" />允许删除
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>*@
                    <input type="hidden" id="Id" name="Id" value="" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn blue" onclick="SysParameters.Save();">保存</button>
                <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
            </div>
        </div>
    </div>
</div>
<!--END 添加和编辑的表单e -->
