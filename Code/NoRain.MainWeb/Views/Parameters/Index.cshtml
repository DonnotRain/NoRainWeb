@using System.Web.Optimization
@{
    ViewBag.Title = "设置系统参数";
}
@section CommonHeader{
    <!--开始 公用样式 -->
    <link href="~/assets/global/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" />
    <!--结束 公用样式 -->
}
@section Header{
    <style type="text/css">
    </style>

}
<h3 class="page-title">
    系统参数管理 <small>维护系统中的部分配置信息及设置模块权限等</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">系统基础</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li class="active">设置系统参数</li>
    </ul>
</div>
<form class="form-inline">
    <div class="form-group">
        <label class="sr-only" for="exampleInputName2">参数名称:</label>
        <input type="text" class="form-control" id="conditionName" placeholder="参数名称">
    </div>
    <div class="form-group">
        <label class="sr-only" for="exampleInputEmail2">值:</label>
        <input type="email" class="form-control" id="conditionValue" placeholder="参数值">
    </div>
    <a href="javascript:void(0)" class="btn  btn-sm green" id="btnSearch">查询 <i class="fa fa-search"></i></a>
</form>
<hr class="sm" />
<div class="row">
    <div class="col-md-8 col-sm-12">
        <a href="#" class="btn blue btn-sm" onclick="SysParameters.Add();">
            <i class="fa fa-plus"></i>
            <span class="hidden-480">
                添加
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysParameters.Edit();">
            <i class="fa fa-pencil"></i>
            <span class="hidden-480">
                修改
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysParameters.Delete();">
            <i class="fa fa-minus"></i>
            <span class="hidden-480">
                删除
            </span>
        </a>
        <div class="btn-group">
            <a class="btn btn-success btn-sm" href="#" data-toggle="dropdown">
                <i class="fa fa-share"></i>
                <span class="hidden-480">更多</span>
                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu pull-right">
                <li>
                    <a href="#">导出到Excel(当前页)</a>
                </li>
                <li>
                    <a href="#">导出为CSV(当前页) </a>
                </li>
                <li>
                    <a href="#">导出为XML(当前页) </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="#">导出到Excel(全部记录)</a>
                </li>
                <li>
                    <a href="#">导出为CSV(全部记录) </a>
                </li>
                <li>
                    <a href="#">导出为XML(全部记录) </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="#">打印</a>
                </li>
            </ul>
        </div>
    </div>

</div>


<div class="dg-panel" style="padding-top: 5px">
    @*    <div id="dgMain">
        </div>*@
    <table class="table table-striped table-bordered table-hover" id="tableMain">
        <thead>
            <tr role="row" class="heading">
                <th width="2%" class="check" >
                    <input type="checkbox" class="group-checkable">
                </th>
                <th width="5%" class="Name">参数名称</th>
                <th width="15%">
                    参数值
                </th>
                <th width="15%">
                    是否启用
                </th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@Html.Partial("Create")
@section Scripts{

    <script src="~/assets/global/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/assets/global/scripts/datatable.js"></script>

    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/localization/messages_zh.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>

    <script src="~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.zh-CN.js"></script>
    <script src="~/Scripts/JS/Parameters.js"></script>
    <script type="text/javascript">
        SysParameters.init();
    </script>
}