<form class="form-inline">
    <div class="form-group">
        <label class="sr-only" for="exampleInputName2">参数名称:</label>
        <input type="text" class="form-control" id="conditionName" placeholder="参数名称">
    </div>
    <div class="form-group">
        <label class="sr-only" for="exampleInputEmail2">值:</label>
        <input type="email" class="form-control" id="conditionValue" placeholder="参数值">
    </div>
    <a href="javascript:void(0)" class="btn  btn-sm green">查询 <i class="fa fa-search"></i></a>
</form>
<hr class="sm" />
<div class="row">
    <div class="col-md-8 col-sm-12">
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.Add();">
            <i class="fa fa-plus"></i>
