@using System.Web.Optimization
@{
    ViewBag.Title = "系统分类项管理";
}

@section Header{
    <link href="~/assets/global/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        .dg-panel {
            /*margin:20px 24px;*/
        }

        /*验证*/
        .invalid {
            border-color: #D00;
        }
    </style>
}

<h3 class="page-title">
    系统分类项管理 <small>维护系统中的分类参数</small>
</h3>
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-6" id="panel-type">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet  gren">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>分类类型
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="fullscreen"></a>
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn blue btn-sm" onclick="SysCategory.Add();">
                        <i class="fa fa-plus"></i>添加
                    </a>
                    <div class="btn-group">
                        <a class="btn btn-sm green" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-bars"></i>更多 <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;" onclick="SysCategory.Edit();">
                                    <i class="fa fa-pencil"></i>编辑
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="SysCategory.Delete();">
                                    <i class="fa fa-trash-o"></i>删除
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="javascript:;" onclick="SysCategory.Disable();">
                                    <i class="fa fa-ban"></i>停用
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="SysCategory.Enable();">
                                    <i class="fa fa-check"></i>启用
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="portlet-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="conditionName">分类名称:</label>
                        <input type="text" class="form-control" id="conditionName" placeholder="分类名称">
                    </div>
                    <a href="javascript:void(0)" class="btn  btn-sm green" id="btnSearch" style="margin-top: 5px">查询 <i class="fa fa-search"></i></a>
                </form>
                <hr class="sm" />

                <div class="dg-panel" style="padding-top: 5px">
                    <table class="table table-striped table-bordered table-hover" id="tableMain">
                        <thead>
                            <tr role="row" class="heading">
                                <th style="width: 1%">
                                    <input type="checkbox" class="group-checkable">
                                </th>
                                <th class="Name">分类名称</th>
                                <th class="Code">
                                    编号
                                </th>
                                <th class="Description">
                                    描述
                                </th>
                                <th class="IsEnabled">
                                    是否启用
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
        <!-- END Portlet PORTLET-->
    </div>
    <div class="col-md-6" id="panel-item">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet gren">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>对应分类项
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="fullscreen"></a>
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn blue btn-sm" onclick="SysCategoryItem.Add();">
                        <i class="fa fa-plus"></i>添加
                    </a>
                    <div class="btn-group">
                        <a class="btn btn-sm green" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-bars"></i>更多 <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;" onclick="SysCategoryItem.Edit();">
                                    <i class="fa fa-pencil"></i>编辑
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="SysCategoryItem.Delete();">
                                    <i class="fa fa-trash-o"></i>删除
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="javascript:;" onclick="SysCategoryItem.Disable();">
                                    <i class="fa fa-ban"></i>停用
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="SysCategoryItem.Enable();">
                                    <i class="fa fa-check"></i>启用
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>


            </div>
            <div class="portlet-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="conditionName">分类项名称:</label>
                        <input type="text" class="form-control" id="conditionItemName" placeholder="分类项名称">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="conditionValue">分类项编号:</label>
                        <input type="email" class="form-control" id="conditionItemCode" placeholder="分类项编号">
                    </div>
                    <a href="javascript:void(0)" class="btn  btn-sm green" id="btnItemSearch" style="margin-top: 5px">查询 <i class="fa fa-search"></i></a>
                </form>
                <hr class="sm" />

                <div class="dg-panel" style="padding-top: 5px">
                    <table class="table table-striped table-bordered table-hover" id="tableItem">
                        <thead>
                            <tr role="row" class="heading">
                                <th style="width: 1%">
                                    <input type="checkbox" class="group-checkable">
                                </th>
                                <th class="Code">
                                    分类项编号
                                </th>
                                <th class="ItemContent">
                                    值
                                </th>
                                <th class="Description">
                                    说明
                                </th>
                                <th class="IsEnabled">
                                    是否启用
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
@Html.Partial("CreateCategory")
@Html.Partial("CreateCategoryItem")

@section Scripts{

    <script src="~/assets/global/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/assets/global/scripts/datatable.js"></script>
    <script src="~/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js"></script>

    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/localization/messages_zh.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
    <script src="~/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.zh-CN.js"></script>
    <script src="~/assets/admin/NoRain/scripts/SysCategory.js"></script>
    <script src="~/assets/admin/NoRain/scripts/SysCategoryItem.js"></script>
    <script type="text/javascript">
        SysCategory.init();
        SysCategoryItem.init();
    </script>
}