@using System.Web.Optimization
@{
    ViewBag.Title = "店面需求";
}

@section Header{
    <link href="~/BackAssets/select2-3.5.1/select2.css" rel="stylesheet" />
    <link href="~/BackAssets/select2-3.5.1/select2-bootstrap.css" rel="stylesheet" />
    <style>
        .BMap_cpyCtrl {
            display: none;
        }
    </style>
    <style type="text/css">

        /*验证*/
        .invalid {
            border-color: #D00;
        }

        div.datagrid-header {
            background-color: #FAEBD7;
        }

        .datagrid-header .datagrid-cell span {
            font-size: 14px;
            font-weight: 600;
        }
    </style>

}

@section breadcrumb{
    <li class="active">店面需求</li>}
<div>

    <div id="div-searchctr-wrap">
        @*<span class="search-condition-box">商品编号:<input id="conditionCode" type="text" style="width: 140px;height: 22px;" /></span>*@
        <span class="search-condition-box">主题:<input id="conditionName" type="text" style="width: 140px;height: 22px;" /></span>
        @*<span class="search-condition-box">商品类型:<input id="conditionType" type="text" style="width: 140px;height: 22px;" /></span>*@
        <span class="search-condition-box">销售门店:<input id="conditionStoreName" type="text" style="width: 140px;height: 22px;" /></span>
        <span class="search-condition-box">
            提交时间:<input id="conditionBeginTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
        </span>
        <span class="search-condition-box">~</span>
        <span class="search-condition-box">
            <input id="conditionEndTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
        </span>
        <span style="float: right; margin-right: 0px;margin-top:5px; display: inline-block">
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.Sale.Request.reloadDataGrid();"><i class="icon-search bigger-130"></i>查询</button>
        </span>
    </div>

    <div class="dg-panel" style="padding: 0px 5px;">
        <div id="dgMain">
        </div>
    </div>

</div>


<div id="dlgs" style="display: none;">
    @Html.Partial("Create")
</div>
@section Scripts{

    <script src="~/BackAssets/select2-3.5.1/select2.min.js"></script>
    <script src="~/BackAssets/My97/WdatePicker.js"></script>
    <script src="~/BackAssets/jquery-easyui-1.4/easyloader.js"></script>

    <script src="~/Scripts/jQuery.validVal/js/jquery.validVal.js"></script>

    <script src="~/BackAssets/js/jquery.gritter.min.js"></script>

    <script src="~/Scripts/JS/Sale/Request.js"></script>

    <script type="text/javascript">
        //$(".select2").select2();
        PlugFunctions.Sale.Request.init();
    </script>
}