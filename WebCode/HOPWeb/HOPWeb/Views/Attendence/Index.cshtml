@using System.Web.Optimization
@{
    ViewBag.Title = "考勤管理";
}

@section Header{

    <link href="~/BackAssets/lightbox/css/lightbox.css" rel="stylesheet" />
    @*<link href="~/BackAssets/lightbox/css/screen.css" rel="stylesheet" />*@
    <style>
        .BMap_cpyCtrl {
            display: none;
        }

        .anchorBL {
            display: none;
        }
    </style>
    <style type="text/css">
        /*覆盖easyui Tab已选中的样式*/
        .tabs li.tabs-selected a.tabs-inner {
            background-color: #ffffff;
            color: #0E2D5F;
            background: -webkit-linear-gradient(top,#C5C5C5 0,#ffffff 100%);
            background: -moz-linear-gradient(top,#C5C5C5 0,#ffffff 100%);
            background: -o-linear-gradient(top,#C5C5C5 0,#ffffff 100%);
            background: linear-gradient(to bottom,#C5C5C5 0,#ffffff 100%);
            background-repeat: repeat-x;
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#C5C5C5,endColorstr=#ffffff,GradientType=0);
        }
        /*验证*/
        .invalid {
            border-color: #D00;
        }

        div.datagrid-header {
            background-color: #FAEBD7;
        }

        .datagrid-header .datagrid-cell span {
            font-size: 14px;
            font-weight: 600;
        }
    </style>

}

@section breadcrumb{
    <li class="active">考勤管理</li>}
<div>
    <div id="tabMain" style="display:none">
        <div title="促销员点名" style=" margin-top: 5px;">
            <div id="div-searchctr-wrap">
                <span class="search-condition-box">促销员名称:<input id="conditionUserName" type="text" style="width: 140px;height: 22px;" /></span>

                <span class="search-condition-box">
                    签到时间:<input id="signBeginTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
                </span>
                <span class="search-condition-box">~</span>
                <span class="search-condition-box">
                    <input id="signEndTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
                </span>
                <span style="float: right; margin-right: 0px; display: inline-block">
                    <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.Attendence.Index.reloadSignDataGrid();"><i class="icon-search bigger-130"></i>查询</button>
                </span>
            </div>

            <div class="dg-panel" style="padding: 0px 5px;">
                <div id="dgAttendence">
                </div>
                <div id="containnerMap" style="width:100%;height:400px">
                </div>
            </div>
        </div>
        <div title="请假批复" style=" margin-top: 5px;">
            <div id="div-searchctr-wrap">
                @*<span class="search-condition-box">所属门店:<input id="conditionDept" type="text" style="width: 140px;height: 22px;" /></span>*@
                <span class="search-condition-box">
                    状态:<select multiple id="Status" class="easyui-combobox" data-options="multiple:true,editable:false"
                               style="width: 140px;height: 22px;margin-top: -5px;">
                        <option value="1">已审核</option>
                        <option value="0">已拒绝</option>
                        <option value="-1">未审核</option>
                    </select>
                </span>
                <span class="search-condition-box">
                    请假开始时间:<input id="conditionBeginTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
                </span>
                <span class="search-condition-box">~</span>
                <span class="search-condition-box">
                    <input id="conditionEndTime" type="text" class="Wdate" onfocus="WdatePicker()" style="width: 140px;height: 22px;" />
                </span>
                <span style="float: right; margin-right: 0px; display: inline-block">
                    <button class="btn  btn-yellow btn-xs radius-4" onclick="PlugFunctions.Attendence.Index.add();"><i class="icon-search bigger-130"></i>批复</button>
                    <button class="btn  btn-yellow btn-xs radius-4" onclick="PlugFunctions.Attendence.Index.reloadDataGrid();"><i class="icon-search bigger-130"></i>查询</button>
                </span>
            </div>

            <div class="dg-panel" style="padding: 0px 5px;">
                <div id="dgMain">
                </div>
            </div>

        </div>

    </div>
</div>

<div id="dlgs" style="display: none;">
    @Html.Partial("Create")
</div>
@section Scripts{
    <!-- 百度地图相关 -->
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=2NGVdhl05yLBDEiMMbFh8Ndw"></script>
    <script src="~/BackAssets/My97/WdatePicker.js"></script>
    <script src="~/BackAssets/jquery-easyui-1.4/easyloader.js"></script>
    <script src="~/BackAssets/lightbox/js/lightbox.min.js"></script>
    <script src="~/Scripts/jQuery.validVal/js/jquery.validVal.js"></script>

    <script src="~/Scripts/JS/Business/Attendence.js"></script>
    <script type="text/javascript">
        PlugFunctions.Attendence.Index.init();
    </script>
}