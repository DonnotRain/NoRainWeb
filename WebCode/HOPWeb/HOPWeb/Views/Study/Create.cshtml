<div id="dlgMain" style="width: 700px; height: 500px; display: none; padding-top: 5px">
    <form id="fm" style="margin: 0px auto;">
        @{
            var width = 220;
            var easyWidth = 222;
        }
        <table border="0" cellpadding="0" cellspacing="0" class="frm-table">
            <tr>
                <th>
                    主题<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Title" id="Title" class="required" type="text" style="width: 90%" value="" />
                </td>
            </tr>
            <tr>
                <th>
                    类型<span class="label-necessary">*</span>：
                </th>
                <td>
                    <select name="Type" id="Type" class="easyui-combobox required" style="width: 524px">
                         <option value="0"></option>
                         <option value="1">规章制度</option>
                         <option value="2">商品资料</option>
                         <option value="3">市场资料</option>  
                    </select>
                    
                </td>
            </tr>
            <tr>
                <th>
                    描述<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Detail" id="Detail" class="required" type="text" style="width: 90%" value="" />
                </td>
            </tr>
            
            <tr>
                <th>
                    备注:
                </th>
                <td>
                    <script type="text/plain" id="umEditor" style="width:524px;height:140px;">
                    </script>
                </td> 
            </tr>
            @*<tr>
                <th>
                    附件上传：
                </th>
                <td>
                    <a id="btnChooseFile" class="btn-chooseFile">
                        附件上传
                       <input class="required" style="opacity: 0; width: 100%; height: 100%; position: absolute; left: 0px; top: 0px;" type="file" id="input-file" name="input-file" onchange="$('#spanFileName').html($(this).val());">
                    </a>
                    <span id="spanFileName"></span>
                </td>
            </tr>*@
        </table>
        <input type="hidden" id="ID" name="ID" value="" />
        <input type="hidden" id="CreateTime" name="CreateTime" value="" />
        <input type="hidden" id="Creator" name="Creator" value="" />
        <input type="hidden" id="CorpCode" name="CorpCode" value="" />
        <input type="hidden" id="FileId" name="FileId" value="" />
    </form>
</div>