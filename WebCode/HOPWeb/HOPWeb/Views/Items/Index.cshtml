@using System.Web.Optimization
@{
    ViewBag.Title = "商品管理";
}

@section Header{
    <link href="~/BackAssets/select2-3.5.1/select2.css" rel="stylesheet" />
    <link href="~/BackAssets/select2-3.5.1/select2-bootstrap.css" rel="stylesheet" />
    <style>
        .BMap_cpyCtrl {
            display: none;
        }
    </style>
    <style type="text/css">
        /*验证*/
        .invalid {
            border-color: #D00;
        }

        div.datagrid-header {
            background-color: #FAEBD7;
        }

        .datagrid-header .datagrid-cell span {
            font-size: 14px;
            font-weight: 600;
        }
    </style>

}

@section breadcrumb{
    <li class="active">商品管理</li>}
<div>

    <div id="div-searchctr-wrap">
        <span class="search-condition-box">商品编号:<input id="conditionCode" type="text" style="width: 140px;height: 22px;" /></span>
        <span class="search-condition-box">商品名称:<input id="conditionName" type="text" style="width: 140px;height: 22px;" /></span>
        <span class="search-condition-box">商品类型:<select multiple id="conditionType" class="easyui-combobox" data-options="multiple:true,editable:false"
        style="width: 140px;height: 22px;margin-top: -5px;">
    <option value="1">平板</option>
    <option value="0">手机</option>
</select></span>
        <span class="search-condition-box">
            商品价格:<input id="conditionBegin" type="text" style="width: 50px;height: 22px;" />
        </span>
        <span class="search-condition-box">~</span>
        <span class="search-condition-box">
            <input id="conditionEnd" type="text" style="width: 50px;height: 22px;" />
        </span>
        <span style="float: right; margin-right: 0px;margin-top:5px; display: inline-block">
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.SystemBase.Item.reloadDataGrid();"><i class="icon-search bigger-130"></i>查询</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.SystemBase.Item.add();"><i class="icon-plus"></i>添加</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.SystemBase.Item.edit();"><i class="icon-pencil"></i>编辑</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.SystemBase.Item.deleteItems();"><i class="icon-remove"></i>删除</button>
        </span>
    </div>
    <div class="dg-panel" style="padding: 0px 5px;">
        <div id="dgMain">
        </div>
    </div>
</div>

<div id="dlgs" style="display: none;">
    @Html.Partial("Create")
</div>
@section Scripts{

    <script src="~/BackAssets/select2-3.5.1/select2.min.js"></script>
    <script src="~/BackAssets/My97/WdatePicker.js"></script>
    <script src="~/BackAssets/jquery-easyui-1.4/easyloader.js"></script>

    <script src="~/Scripts/jQuery.validVal/js/jquery.validVal.js"></script>

    <script src="~/BackAssets/js/jquery.gritter.min.js"></script>

    <script src="~/Scripts/JS/SystemBase/Item.js"></script>

    <script type="text/javascript">
        //$(".select2").select2();
        PlugFunctions.SystemBase.Item.init();
    </script>
}