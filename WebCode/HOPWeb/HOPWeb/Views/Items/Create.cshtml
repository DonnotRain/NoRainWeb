<div id="dlgMain" style="width: 500px; height: 400px; display: none; padding-top: 5px">
    <form id="fm" style="margin: 0px auto;">
        @{
            var width = 220;
            var easyWidth = 222;
        }
        <table border="0" cellpadding="0" cellspacing="0" class="frm-table">
            <tr>
                <th>
                    编号<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Code" id="Code" class="required" type="text" style="width: 90%" value="" />
                </td>
            </tr>
            <tr>
                <th>
                    名称<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Name" id="Name" class="required" type="text" style="width: 90%" value="" />
                </td>
            </tr>

            <tr>
                <th>
                    类型<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Type" id="Type" class="required" type="text" style="width: 345px" value="" />
                </td>
            </tr>
            <tr>
                <th>
                    条码<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Barcode" id="Barcode" class="required" type="text" style="width: 90%" value="" />
                </td>
            </tr>
            <tr>
                <th>
                    价格<span class="label-necessary">*</span>：
                </th>
                <td>
                    <input name="Price" id="Price" class="number required" type="text" style="width: 90%" value="" />
                </td>
            </tr>
            <tr>
                <th>
                    描述：
                </th>
                <td>
                    <textarea name="Detail" id="Detail" style="width: 90%;height:80px"></textarea>
                </td>
            </tr>
        </table>
        <input type="hidden" id="ID" name="ID" value="" />
    </form>
</div>
