@using System.Web.Optimization
@{
    ViewBag.Title = "系统模块";
}

@section Header{
    <link href="~/Content/Plug/Plug.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/bootstrap-dialog/dist/css/bootstrap-dialog.min.css" rel="stylesheet" />
    <style type="text/css">
        .dg-panel {
            padding-bottom: 40px;
        }
    </style>
}
@section breadcrumb{
    <li>系统模块</li>}
<div>
    <div id="div-searchctr-wrap" style="padding-bottom: 10px;">
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.Add();">
            <i class="fa fa-plus"></i>
            <span class="hidden-480">添加
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.ModalAdd();">
            <i class="fa fa-plus"></i>
            <span class="hidden-480">boot模态添加
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.Edit();">
            <i class="fa fa-pencil"></i>
            <span class="hidden-480">修改
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.Delete();">
            <i class="fa fa-minus"></i>
            <span class="hidden-480">删除
            </span>
        </a>
        <a href="#" class="btn blue btn-sm" onclick="SysFunction.reloadDataGrid();">
            <i class="fa fa-refresh"></i>
            <span class="hidden-480">刷新
            </span>
        </a>
    </div>
    <div class="dg-panel">
        <div id="dgMain">
        </div>
    </div>
</div>

