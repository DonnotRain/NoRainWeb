@using System.Web.Optimization
@{
    ViewBag.Title = "系统模块";
}

@section Header{
    <link href="~/Content/Plug/Plug.css" rel="stylesheet" />
    <style type="text/css">
        .dg-panel {
           padding-bottom: 40px;
        }
    </style>
}
@section breadcrumb{
    <li>系统模块</li>}
<div >
    <div id="div-searchctr-wrap">
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Add();"><i class="icon-plus bigger-130"></i>添加</a>
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Edit();"><i class="icon-pencil bigger-130"></i>修改</a>
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Delete();"><i class="icon-minus bigger-130"></i>删除</a>
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="reloadDataGrid();"><i class="icon-refresh bigger-130"></i>刷新</a>
    </div>

    <div class="dg-panel">
        <div id="dgMain">
        </div>
    </div>

</div>

<div id="dlgsContainer" style="display: none;">
    <div id="mm" class="easyui-menu" style="width:120px;">
        <div onclick="Add()" data-options="iconCls:'icon-plus bigger-130'">新增</div>
        <div onclick="Edit()" data-options="iconCls:'icon-pencil bigger-130'">编辑</div>
        <div onclick="Delete()" data-options="iconCls:'icon-minus bigger-130'">删除</div>
        <div class="menu-sep"></div>
        <div onclick="reloadDataGrid()" data-options="iconCls:'icon-refresh bigger-130'">刷新</div>
    </div>
    @Html.Partial("Create")
</div>
@section Scripts{
    <script src="~/BackAssets/jquery-easyui-1.4/easyloader.js"></script>

    <script src="~/Scripts/jQuery.validVal/js/jquery.validVal.js"></script>
    <script src="~/BackAssets/js/jquery.gritter.min.js"></script>

    <script type="text/javascript">
        @{
            var startIndex = Request.Url.AbsoluteUri.IndexOf(Request.Url.AbsolutePath);
            var rootPath = Request.Url.AbsoluteUri.Remove(startIndex);
        }
        var rootPath = '@rootPath';
    </script>
<script src="~/Scripts/JS/Plug.js"></script>
}