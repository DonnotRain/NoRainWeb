@using System.Web.Optimization
@{
    ViewBag.Title = "设置系统参数";
}

@section Header{
    <style type="text/css">
        /*验证*/
        .invalid {
            border-color: #D00;
        }

        div.datagrid-header {
            background-color: #FAEBD7;
        }

        .datagrid-header .datagrid-cell span {
            font-size: 14px;
            font-weight: 600;
        }
    </style>

}

@section breadcrumb{
    <li class="active">设置系统参数</li>}
<div>

    <div id="div-searchctr-wrap">
        <span class="search-condition-box">名称 :<input id="conditionName" type="text" style="width: 120px;height: 22px;" /></span>
        <span class="search-condition-box">值:<input id="conditionValue" type="text" style="width: 100px;height: 22px;" /></span>
        <span style="float: right; margin-right: 0px;margin-top:5px; display: inline-block">
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.System.Parameter.reloadDataGrid();"><i class="icon-search bigger-130"></i>查询</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.System.Parameter.add();"><i class="icon-plus"></i>添加</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.System.Parameter.edit();"><i class="icon-pencil"></i>编辑</button>
            <button class="btn  btn-yellow btn-xs" onclick="PlugFunctions.System.Parameter.deleteItems();"><i class="icon-remove"></i>删除</button>
        </span>
    </div>
    <div class="dg-panel" style="padding: 0px 5px;">
        <div id="dgMain">
        </div>
    </div>
</div>
<div id="dlgs" style="display: none;">
    @Html.Partial("Create")
</div>
@section Scripts{

    <script src="~/BackAssets/jquery-easyui-1.4/easyloader.js"></script>

    <script src="~/Scripts/jQuery.validVal/js/jquery.validVal.js"></script>

    <script src="~/BackAssets/js/jquery.gritter.min.js"></script>

    <script src="~/Scripts/JS/Parameters.js"></script>
    <script type="text/javascript">
        PlugFunctions.System.Parameter.init();
    </script>
}