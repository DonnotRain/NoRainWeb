@using System.Web.Optimization
@{
    ViewBag.Title = "商品单位管理";
    Layout = "~/Areas/Back/Views/Shared/_BackLayout.cshtml";
}

@section Header{
    <link href="~/Content/Common.css" rel="stylesheet" />
    <style type="text/css">
        .dg-panel {
            /*margin:20px 24px;*/
        }
    </style>

}
@section breadcrumb{
    <li class="active">产品</li>}
<div>
    <div id="div-searchctr-wrap">
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Add();"><i class="icon-plus bigger-130"></i>添加</a>
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Edit();"><i class="icon-pencil bigger-130"></i>修改</a>
            <a href='javascript:;' class="btn  btn-yellow btn-xs radius-4" onclick="Delete();"><i class="icon-minus bigger-130"></i>删除</a>
    </div>

    <div class="dg-panel">
        <div id="dgMain">
        </div>
    </div>

</div>

<div id="dlgsContainer" style="display: none;">
    <div id="dlgMain" style="width: 450px; height: 220px; display: none; padding-top: 5px">
        <form id="fm" style="margin: 0px auto;">
            @{
                var width = 300;
                var easyWidth = 303;
            }
            <table style="margin: 20px auto; line-height: 100%" class="frm-table">
                <tr>
                    <th style="width:70px">
                        编号：
                    </th>
                    <td>
                        <input class="" style="width: @(width)px"
                               type="text" name="Code" id="Code" data-bind="value: $data.Name" /><span class="label-necessary">*</span>
                    </td>
                </tr>

                <tr>
                    <th>
                        名称：
                    </th>
                    <td>
                        <input value="0" style="width: @(width)px"
                               type="text" name="Name" id="Name" /><span class="label-necessary">*</span>
                    </td>
                </tr>

            </table>
            <input type="hidden" id="Id" name="Id" value="0" />
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/BackAssets/jquery-easyui-1.3.5/easyloader.js"></script>
    @*<script src="~/BackAssets/js/bootbox.min.js"></script>*@
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/BackAssets/js/jquery.gritter.min.js"></script>
    <script src="~/Areas/Back/JS/Product/ProductUnit.js"></script>
    <script type="text/javascript">

    </script>
}